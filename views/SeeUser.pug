html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")
        link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous")
        link(rel="stylesheet" href="/stylesheets/adminSeeUser.css")
        title Computadoras
    body
        nav(class="navbar navbar-expand-lg navbar-light bg-light")
            button(class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation")
                span(class="navbar-toggler-icon")
            div(class="collapse navbar-collapse d-flex justify-content-between" id="navbarSupportedContent")
                form(method='get' action='computers/search/:Modelo' class="form-inline my-2 my-lg-0")
                    div(class="input-group mb-3 ")
                        input(input type="text" class="form-control" placeholder="Search" id='searchIn')
                        div(class="input-group-append")
                            button(class="btn btn-outline-success my-2 my-sm-0" type='submit' id='searchBtn')='Buscar'
                            button(type="button" class="btn btn-outline-danger my-2 my-sm-0" id='cancelBtn')='Cancelar'
                a(href="/register") Agregar Nueva Pc
            br
        div(class='container justify-content-center ')
            section(class="justify-content-center")
                table(class="table table-hover table-responsive text-center justify-content-center")
                    thead
                        tr(class='table-dark')
                            th(scope="col")='Modelo'
                            th(scope="col")='Marca'
                            th(scope="col")='Memoria'
                            th(scope="col")='Precio'
                            th(scope='col')='Tipo'
                            th(scope="col")='Sistema Operativo'
                            th(scope="col")= 'Eliminar?'
                    tbody(id='table_body')
        //- editModal
        div(class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true")    
            div(class="modal-dialog modal-dialog-centered" role="document")
                div(class="modal-content")
                    div(class="modal-header")
                        h5(class="modal-title" id="userCarnet") Actualizar
                        button(type="button" class="close" data-dismiss="modal" aria-label="Close")
                            span(aria-hidden="true") &times;
                    form(action="/computers/:modelo" method="put")
                        div(class="modal-body")
                            div(class="form-group")
                                input(type="text" class="form-control" placeholder="Marca" required="required" name='marca')
                            div(class="form-group")
                                input(type="text" class="form-control" placeholder="Modelo" required="required" name='modelo')
                            div(class="form-group")
                                input(type="text" class="form-control" placeholder="memoria" required="required" name='memoria')
                            div(class="form-group")
                                input(type="text" class="form-control" placeholder="precio" required="required" name='precio')
                            div(class="form-group")
                            select(name="tipo" class= "form-control")
                                option(value="Escritorio") Escritorio
                                option(value="Laptop") Laptop
                            div(class="form-group")
                                input(type="text" class="form-control" placeholder="Sistema Operativo" required="required" name='sistema_operativo')
                                small(id="emailHelp" class="form-text text-muted") #GNU
                        div(class="modal-footer")
                            button(class="btn btn-secondary" data-dismiss="modal" id='closeBtn')='Cerrar'
                            a(href='computers/' class="btn btn-primary" id='editBtn')='Guardar'                     
        //- advancedModal
        div(class="modal fade" id="advancedModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true")    
            div(class="modal-dialog modal-dialog-centered" role="document")
                div(class="modal-content")
                    div(class="modal-header")
                        h5(class="modal-title" id="userCarnet")='Busqueda avanzada'
                        button(type="button" class="close" data-dismiss="modal" aria-label="Close")
                            span(aria-hidden="true") &times;
                    div(class="modal-body")
                        div(class="form-group")
                            label(for="type")='Tipo'
                            select(class="form-control" id="type" name='type')
                                option='todos'
                                option='estudiante'
                                option='docente'
                                option='soporte'
                        div(class="form-group")
                            label(for="state")='Estado'
                            select(class="form-control" id="state" name='state')
                                option='todos'
                                option='activado'
                                option='desactivado'
                        div(class="form-group")
                            label(for="state")='Carrera'
                            select(class="form-control" id="career" name='career')
                                option='todas'
                        div(class="form-group")
                            label(for="state")='Materia'
                            select(class="form-control" id="subject" name='subject')
                                option='todas'                            
                    div(class="modal-footer")
                        button(class="btn btn-secondary" data-dismiss="modal" id='closeAdBtn')='Cerrar'
                        a(href='users/showAdvanced' class="btn btn-primary" id='filterBtn' data-dismiss='modal')='Filtrar'
                        
    script(src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous")
    script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous")
    script(src="/javascripts/SeeUser.js")
